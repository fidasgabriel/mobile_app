<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rvCardView"
    app:cardCornerRadius="12dp"
    app:layout_goneMarginBottom="20dp">
    <ImageView
        android:id="@+id/postImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:minHeight="300dp"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_marginTop="300dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1A1A1A"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/imageCard"
            android:layout_width="38dp"
            android:layout_height="38dp"
            app:cardCornerRadius="21dp"
            android:layout_marginLeft="16dp">

            <ImageView
                android:id="@+id/perfilImage"
                app:cardCornerRadius="19dp"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:srcCompat="@tools:sample/avatars" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/postAuthor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingTop="2dp"
            android:paddingLeft="14dp"
            android:gravity="center_vertical"
            android:text="Dr. coach "
            android:textColor="#FAFAFA"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/like"
            android:layout_width="80dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/avd_heart_empty" />

        <ImageView
            android:id="@+id/save"
            android:layout_width="60dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/post_save_icon_empty" />

    </LinearLayout>

        <TextView
            android:id="@+id/postDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="#FAFAFA"
            android:text="Lorem ipsum dolor sit amet consectetur adipiscing elit Ut et massa mi. Aliquam in hendrerit urna. Pellentesque sit amet sapien fringilla, mattis ligula mattis tellus" />
    </LinearLayout>
</androidx.cardview.widget.CardView>