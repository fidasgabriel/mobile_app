<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".View.LogIn">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/unbounded_bold"
            android:text="Entre"
            android:textAlignment="center"
            android:textColor="#0E0E0E"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/unbounded_bold"
            android:text="CULTURALLIS"
            android:textAlignment="center"
            android:textColor="#1B1B1B"
            android:textColorHint="#000000"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/userEmailEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:background="@drawable/border_edittext"
            android:ems="10"
            android:fontFamily="@font/unbounded_bold"
            android:hint="e-mail"
            android:inputType="textEmailAddress"
            android:padding="20sp"
            android:textColor="@color/gray_typography"
            android:textColorHighlight="#404040"
            android:textColorHint="@color/gray_typography"
            android:textColorLink="@color/gray_typography"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/userSenhaEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:background="@drawable/border_edittext"
            android:ems="10"
            android:fontFamily="@font/unbounded_bold"
            android:hint="senha"
            android:inputType="textPassword"
            android:padding="20sp"
            android:textColor="@color/gray_typography"
            android:textColorHighlight="#404040"
            android:textColorHint="@color/gray_typography"
            android:textColorLink="@color/gray_typography"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:padding="12sp"
            android:text="Entrar"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/inter"
            app:cornerRadius="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/noHasAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="NÃ£o tem conta?"
            android:fontFamily="@font/inter"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/linkLogon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="changeToLogin"
            android:text="CADASTRAR-SE"
            android:textColor="@color/base_blue"
            android:textSize="20sp"
            android:fontFamily="@font/inter"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>