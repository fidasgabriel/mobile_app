<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".View.Navbar.TopNavbar">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:padding="16dp"
            android:backgroundTint="@color/white_base"
            android:background="@color/white_base">
        <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:onClick="changeCoursesHome"
                app:srcCompat="@drawable/logo"
                android:id="@+id/logotypeNavbar"
        />
        <ImageView
                android:layout_width="0dp"
                android:layout_gravity="start"
                android:layout_weight="2"
                android:layout_height="36dp"
                android:id="@+id/spacing"
        />
        <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:onClick="changeMainSettings"
                app:srcCompat="@drawable/icon_settings_black"
                android:id="@+id/settings"
        />

    </LinearLayout>

</FrameLayout>