<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".View.Navbar.DownNavbar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_base"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnHomePosts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="@color/base_gray"
            android:paddingVertical="12dp"
            android:background="@drawable/unselected_tab"
            android:src="@drawable/home_posts_icon"
            android:gravity="center"
            />

        <ImageView
            android:id="@+id/btnHomeCourses"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingVertical="12dp"
            android:background="@drawable/unselected_tab"
            android:src="@drawable/home_courses_icon"
            android:gravity="center"
            />

        <ImageView
            android:id="@+id/btnHomeProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="6dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/unselected_tab"
            android:src="@drawable/home_profile_icon"
            android:gravity="center"
            />
    </LinearLayout>
</LinearLayout>
