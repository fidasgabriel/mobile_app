<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".View.Navbar.DownNavbar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_base"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnHomePosts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/unselected_tab"
            android:drawableTop="@drawable/home_icon"
            android:drawableTint="@color/black"
            android:fontFamily="@font/unbounded_regular"
            android:gravity="center"
            android:padding="4sp"
            android:text="Posts"
            android:textAllCaps="false"
            android:textColor="@color/gray_typography"
            android:textSize="10sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnHomeCourses"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/unselected_tab"
            android:drawableTop="@drawable/courses_icon"
            android:drawableTint="@color/black"
            android:fontFamily="@font/unbounded_regular"
            android:gravity="center"
            android:padding="4sp"
            android:text="Cursos"
            android:textAllCaps="false"
            android:textColor="@color/gray_typography"
            android:textSize="10sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnHomeProfile"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/unselected_tab"
            android:drawableTop="@drawable/profile_icon"
            android:drawableTint="@color/black"
            android:fontFamily="@font/unbounded_regular"
            android:gravity="center"
            android:padding="4sp"
            android:text="Perfil"
            android:textAllCaps="false"
            android:textColor="@color/gray_typography"
            android:textSize="10sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
