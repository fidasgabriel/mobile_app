<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".View.Configuration.MainSettingsScreen"
        android:orientation="vertical"
        android:padding="16dp"
>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="32dp">
        <include
                android:id="@+id/mytoolbar"
                layout="@layout/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp">
        <TextView
                android:text="Conta"
                android:fontFamily="@font/unbounded_regular"
                android:layout_width="wrap_content"
                android:textColor="@color/base_black"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
            android:id="@+id/error_oops"
            android:layout_weight="1"
                android:layout_marginBottom="16dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/editProfileBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="@drawable/base_edit_buttons_start"
            android:drawableStart="@drawable/profile_edit_icon"
            android:drawableEnd="@drawable/arrow_right"
            android:drawablePadding="16dp"
            android:fontFamily="@font/unbounded_regular"
            android:letterSpacing="0.1"
            android:onClick="changeToPerfilEdit"
            android:padding="16dp"
            android:shadowDx="0"
            android:shadowDy="0"
            android:text="Editar Perfil"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/base_black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/editSeguranceBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/base_edt_button_end"
            android:drawableStart="@drawable/security"
            android:drawableEnd="@drawable/arrow_right"
            android:drawablePadding="16dp"
            android:fontFamily="@font/unbounded_regular"
            android:letterSpacing="0.1"
            android:onClick="changeToSecurity"
            android:padding="16dp"
            android:shadowDx="0"
            android:shadowDy="0"
            android:text="SeguranÃ§a"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/base_black"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/errorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/unbounded_regular"
            android:text="Sobre"
            android:textColor="@color/base_black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/centralHelpBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="@drawable/base_edit_buttons_start"
            android:drawableStart="@drawable/central_help_icon"
            android:drawableEnd="@drawable/arrow_right"
            android:drawablePadding="16dp"
            android:fontFamily="@font/unbounded_regular"
            android:letterSpacing="0.1"
            android:onClick="changeToCentralAjuda"
            android:padding="16dp"
            android:shadowDx="0"
            android:shadowDy="0"
            android:text="Central de Ajuda"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/base_black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/aboutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="@drawable/base_edit_buttons"
            android:drawableStart="@drawable/about_icon"
            android:drawableEnd="@drawable/arrow_right"
            android:drawablePadding="16dp"
            android:fontFamily="@font/unbounded_regular"
            android:letterSpacing="0.1"
            android:onClick="changeToLanding"
            android:padding="16dp"
            android:shadowDx="0"
            android:shadowDy="0"
            android:text="Sobre"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/base_black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/privacyTermsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="@drawable/base_edit_buttons"
            android:drawableStart="@drawable/privacy_and_terms"
            android:drawableEnd="@drawable/arrow_right"
            android:drawablePadding="16dp"
            android:fontFamily="@font/unbounded_regular"
            android:letterSpacing="0.1"
            android:onClick="changeToTermsOfService"

            android:padding="16dp"
            android:shadowDx="0"
            android:shadowDy="0"
            android:text="Termos e Privacidade"
            android:textAlignment="viewStart"
            android:textAllCaps="false"

            android:textColor="@color/base_black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/rateUsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/base_edt_button_end"
            android:drawableStart="@drawable/rate_us"
            android:drawableEnd="@drawable/arrow_right"
            android:drawablePadding="16dp"
            android:fontFamily="@font/unbounded_regular"
            android:letterSpacing="0.1"
            android:padding="16dp"
            android:shadowDx="0"
            android:shadowDy="0"
            android:text="Nos avalie"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/base_black"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:gravity="bottom" android:layout_gravity="bottom"
    >
        <Button
                android:text="Sair"
                app:iconPadding="16dp"
                android:onClick="exitButton"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:fontFamily="@font/unbounded_regular"
                app:backgroundTint="@color/base_red"
                android:background="@drawable/exit_button"
                android:layout_height="wrap_content"
                android:id="@+id/exitBtn"
                android:padding="12dp"
                android:textAllCaps="false"
                app:iconGravity="textStart"
                android:textSize="16sp"
                android:textStyle="bold"
                app:icon="@drawable/exit_icon" android:gravity="center" android:layout_gravity="bottom|end">
        </Button>
    </LinearLayout>
</LinearLayout>