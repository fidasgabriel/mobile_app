<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".View.Configuration.MainSettingsScreen" android:orientation="vertical" android:padding="16dp"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:orientation="horizontal">

        <include
            android:id="@+id/mytoolbar"
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/unbounded_regular"
                    android:text="Conta"
                    android:textColor="@color/base_black"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/editProfileBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/base_edit_buttons_start"
                    android:drawableStart="@drawable/profile_edit_icon"
                    android:drawableEnd="@drawable/arrow_right"
                    android:drawablePadding="16dp"
                    android:fontFamily="@font/unbounded_regular"
                    android:letterSpacing="0.1"
                    android:onClick="changeToPerfilEdit"
                    android:padding="16dp"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:text="Editar Perfil"
                    android:textAlignment="viewStart"
                    android:textAllCaps="false"
                    android:textColor="@color/base_black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/editSeguranceBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/base_edt_button_end"
                    android:drawableStart="@drawable/security"
                    android:drawableEnd="@drawable/arrow_right"
                    android:drawablePadding="16dp"
                    android:fontFamily="@font/unbounded_regular"
                    android:letterSpacing="0.1"
                    android:onClick="changeToSecurity"
                    android:padding="16dp"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:text="SeguranÃ§a"
                    android:textAlignment="viewStart"
                    android:textAllCaps="false"
                    android:textColor="@color/base_black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/unbounded_regular"
                    android:text="Sobre"
                    android:textColor="@color/base_black"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/centralHelpBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/base_edit_buttons_start"
                    android:drawableStart="@drawable/central_help_icon"
                    android:drawableEnd="@drawable/arrow_right"
                    android:drawablePadding="16dp"
                    android:fontFamily="@font/unbounded_regular"
                    android:letterSpacing="0.1"
                    android:onClick="changeToHelpCenter"
                    android:padding="16dp"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:text="Central de Ajuda"
                    android:textAlignment="viewStart"
                    android:textAllCaps="false"
                    android:textColor="@color/base_black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/aboutBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/base_edit_buttons"
                    android:drawableStart="@drawable/about_icon"
                    android:drawableEnd="@drawable/arrow_right"
                    android:drawablePadding="16dp"
                    android:fontFamily="@font/unbounded_regular"
                    android:letterSpacing="0.1"
                    android:onClick="changeToLanding"
                    android:padding="16dp"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:text="Sobre"
                    android:textAlignment="viewStart"
                    android:textAllCaps="false"
                    android:textColor="@color/base_black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/privacyTermsBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/base_edit_buttons"
                    android:drawableStart="@drawable/privacy_and_terms"
                    android:drawableEnd="@drawable/arrow_right"
                    android:drawablePadding="16dp"
                    android:fontFamily="@font/unbounded_regular"
                    android:letterSpacing="0.1"
                    android:onClick="changeToTermsOfService"
                    android:padding="16dp"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:text="Termos e Privacidade"
                    android:textAlignment="viewStart"
                    android:textAllCaps="false"
                    android:textColor="@color/base_black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/rateUsBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="36dp"
                    android:layout_weight="1"
                    android:background="@drawable/base_edt_button_end"
                    android:drawableStart="@drawable/rate_us"
                    android:drawableEnd="@drawable/arrow_right"
                    android:drawablePadding="16dp"
                    android:fontFamily="@font/unbounded_regular"
                    android:letterSpacing="0.1"
                    android:padding="16dp"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:text="Nos avalie"
                    android:textAlignment="viewStart"
                    android:textAllCaps="false"
                    android:textColor="@color/base_black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/exitBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:background="@drawable/exit_button"
                    android:fontFamily="@font/unbounded_regular"
                    android:gravity="center"
                    android:onClick="exitButton"
                    android:padding="12dp"
                    android:text="Sair"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/base_red"
                    app:icon="@drawable/exit_icon"
                    app:iconGravity="textStart"
                    app:iconPadding="16dp"></Button>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>