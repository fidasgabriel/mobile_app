<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".View.LogOn" android:gravity="bottom|center" android:padding="8dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="373dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="12dp">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/userNameEdt"
                android:hint="nome de usuário"
                android:padding="16sp"
                android:textColor="@color/gray_typography"
                android:textColorHint="@color/gray_typography"
                android:textColorLink="@color/gray_typography"
                android:textColorHighlight="#404040"
                android:textSize="20sp" android:textStyle="bold"
                android:background="@drawable/border_edittext"
                android:layout_marginBottom="32dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/emailEdt" android:hint="e-mail" android:padding="16sp" android:textColor="#707070"
                android:textColorHint="#707070" android:textColorLink="#707070" android:textColorHighlight="#404040"
                android:textSize="20sp" android:textStyle="bold" android:background="@drawable/border_edittext"
                android:layout_marginBottom="32dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textVisiblePassword|textPersonName|textPassword"
                android:ems="10"
                android:id="@+id/pswEdt" android:hint="senha" android:padding="16sp" android:textColor="#707070"
                android:textColorHint="#707070" android:textColorLink="#707070" android:textColorHighlight="#404040"
                android:textSize="20sp" android:textStyle="bold" android:background="@drawable/border_edittext"
                android:drawableEnd="@drawable/eye_open" android:layout_marginBottom="32dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textVisiblePassword|textPersonName|textPassword"
                android:ems="10"
                android:id="@+id/confirmPswEdt" android:hint="confirmar senha" android:padding="16sp"
                android:textColor="@color/gray_typography" android:textColorHint="@color/gray_typography"
                android:textColorLink="@color/gray_typography"
                android:textColorHighlight="#404040" android:textSize="20sp" android:textStyle="bold"
                android:background="@drawable/border_edittext"
                android:drawableEnd="@drawable/eye_open"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/confirmMatch" android:layout_marginBottom="16dp"
                android:textColor="@color/base_red" android:textStyle="bold" android:paddingLeft="16sp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_marginBottom="20dp">
            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/termsOfUtilization"
                    android:layout_weight="1"
                    app:buttonIconTint="@color/white" android:buttonTint="@color/gray_typography"
                    android:gravity="center" android:scaleX="1.2" android:scaleY="1.2"/>
            <TextView
                    android:text="Ao assinalar a caixa você concorda com os Termos de uso"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/textTerms" android:layout_weight="10"
                    android:textSize="18sp" android:textColor="@color/gray_typography"
                    android:textAlignment="textStart" android:gravity="center"/>
        </LinearLayout>
        <Button
                android:text="Cadastrar-se"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btnLogon" android:textSize="20sp"
                android:padding="12sp" android:textStyle="bold" android:layout_marginBottom="40dp"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Já tem conta?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/alreadyHasAccount" android:textSize="24sp"
                    android:textColor="@color/black" android:textAlignment="textStart"
                    android:gravity="center_horizontal" android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="2dp"/>
            <TextView
                    android:text="ENTRE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/linkLogin"
                    android:layout_gravity="center_horizontal" android:textSize="20sp"
                    android:textColor="@color/base_blue" android:textStyle="bold" android:clickable="true"
                    android:onClick="changeToLogin"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>