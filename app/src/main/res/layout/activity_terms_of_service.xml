<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".View.Configuration.TermsOfService" android:orientation="vertical" android:padding="16dp">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginBottom="32dp" android:layout_marginTop="32dp">
        <include
                android:id="@+id/mytoolbar"
                layout="@layout/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_weight="@integer/material_motion_duration_long_2"
    >
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">
                <TextView
                        android:text="TextView"
                        android:textColor="@color/base_black"
                        android:textSize="16sp"
                        android:fontFamily="@font/inter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/terms"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" android:gravity="bottom|end" android:layout_weight="1">
        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSave"
                android:onClick="complete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/base_green"
                android:background="@drawable/disabled_button_background"
                android:fontFamily="@font/unbounded_bold"
                android:gravity="center"
                android:padding="10sp"
                android:text="Concluir"
                android:textAllCaps="false"
                android:textColor="@color/white_base"
                android:textSize="16dp"
                android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>