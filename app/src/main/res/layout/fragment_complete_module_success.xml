<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".View.Fragments.SuccessScreens.CompleteModuleSuccess">
    <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1" android:padding="32dp">
            <TextView
                    android:text="Uhuul!!"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:fontFamily="@font/unbounded_regular"
                    android:textColor="@color/base_green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView6"/>
            <TextView
                    android:layout_marginBottom="16dp"
                    android:text="Módulo concluído!"
                    android:fontFamily="@font/unbounded_regular"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView10"/>
            <ImageView
                    android:layout_weight="2"
                    android:src="@drawable/module_complete_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/imageView7"/>
            <TextView
                    android:text="Você concluiu mais um módolo, continue assim! Para saber mais sobre seu progresso fique atento a tela do curso."
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/unbounded_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView9"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:paddingHorizontal="32dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="5">
            <androidx.appcompat.widget.AppCompatButton
                    android:text="Próximo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnBuyCourse"
                    android:textSize="18sp"
                    android:padding="12sp"
                    android:textColor="@color/white_base"
                    android:gravity="center"
                    android:background="@drawable/default_button_background"
                    android:fontFamily="@font/unbounded_regular"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:onClick="nextModule"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>